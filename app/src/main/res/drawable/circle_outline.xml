<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">

    <item>
        <shape android:shape="oval" >
            <gradient

                android:centerColor="#3F51B5"
                android:endColor="#03A9F4"

                android:startColor="#3F51B5"
                android:type="linear" />


        </shape>
    </item>

    <item
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp">


        <shape android:shape="oval" >

            <solid android:color="#fff" />
        </shape>
    </item>

</layer-list>